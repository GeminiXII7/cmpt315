extends ./layout.jade

block content
    h2 Artists
    h3= title
    div.panel.panel-primary
        div.content
            form.form-horizontal(method='get', action='/collaborators')
                div.form-group
                    div.col-sm-4
                        label.control-label.col-sm-4 Genre
                        select.form-control(type='text', name='genre')
                            option(value='')
                            each entry in unique_genres
                                if default_genre == entry
                                    option(selected="selected", value=entry) !{entry}
                                else
                                    option(value=entry) !{entry}
                    div.col-sm-4
                        label.control-label.col-sm-4 City
                        select.form-control(type='text', name='city')
                            option(value='')
                            each entry in unique_cities
                                if default_city == entry
                                    option(selected="selected", value=entry) !{entry}
                                else
                                    option(value=entry) !{entry}
                    div.col-sm-4
                        br
                        button.btn.btn-default(type='submit') Search

                    - var i = 0
                    while i < 5
                        br
                        - i += 1


            table.table.table-hover
                thead
                    tr
                        th
                        th First Name
                        th Last Name
                        th Genre
                        th City
                tbody
                    each entry in query_entries
                        tr
                            td
                                form(action='/profiles/' + entry.id, method='GET')
                                    button.btn.btn-default(type='submit')
                                        span.glyphicon.glyphicon-eye-open
                                        |  View

                            td !{entry.firstName}
                            td !{entry.lastName}
                            td !{entry.genre}
                            td !{entry.city}

